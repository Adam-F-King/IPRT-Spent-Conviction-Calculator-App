<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:background="@color/white"


        tools:context="ie.iskill.collaborationexample.eric.EricActivity">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/home_screen_main_logo"
            android:adjustViewBounds="true"
            android:paddingTop="15dp"
            android:paddingBottom="25dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            >

        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#000000" />
        <LinearLayout
            android:background="@color/grey"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingBottom="5dp"
            >



            <ImageView
                android:padding="20dp"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/iasio"
                android:onClick="oncharity1Click"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"/>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"

       >
            <TextView
                android:autoLink="web"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/charity1"
                android:textColor="@color/black"
                android:gravity="right"
                android:textSize="17dp"
                android:id="@+id/link1"/>

        <TextView
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/charity1Phone"
            android:textColor="@color/black"


            android:textSize="20dp"
            android:gravity="center"/>
        </LinearLayout>

            <ImageView
                android:padding="20dp"
                android:adjustViewBounds="true"
                android:id="@+id/email_charity_1"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_mail_outline_black_24dp"
                android:onClick="sendContact"

                />


        </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            >

            </LinearLayout>



        <!--Changedbox-->
    <LinearLayout
        android:background="@color/grey"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingBottom="5dp"
            >



            <ImageView
                android:padding="20dp"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ucasedh1"
                android:onClick="oncharity2Click"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"/>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"

                >
                <TextView
                    android:autoLink="web"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/charity2"
                    android:textColor="@color/black"
                    android:gravity="right"
                    android:textSize="17dp"
                    android:id="@+id/link2"/>

                <TextView
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/charity2Phone"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:gravity="center"/>
            </LinearLayout>

            <ImageView
                android:padding="20dp"
                android:adjustViewBounds="true"
                android:id="@+id/email_charity_2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_mail_outline_black_24dp"
                android:onClick="sendContact"

                />


        </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#000000" />



        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#000000" />

        <LinearLayout
            android:background="@color/grey"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingBottom="5dp"
                >



                <ImageView
                    android:padding="20dp"
                    android:adjustViewBounds="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bridge"
                    android:onClick="oncharity4Click"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"/>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"

                    >
                    <TextView
                        android:autoLink="web"
                        android:layout_weight="3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/charity4"
                        android:textColor="@color/black"
                        android:gravity="right"
                        android:textSize="17dp"
                        android:id="@+id/link4"/>

                    <TextView
                        android:layout_weight="3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/charity4Phone"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:gravity="center"/>
                </LinearLayout>

                <ImageView
                    android:padding="20dp"
                    android:adjustViewBounds="true"
                    android:id="@+id/email_charity_4"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_mail_outline_black_24dp"
                    android:onClick="sendContact"

                    />


            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#000000" />

        <LinearLayout
            android:background="@color/grey"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingBottom="5dp"
                >



                <ImageView
                    android:padding="20dp"
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/carafterprison"
                    android:onClick="oncharity3Click"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"/>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"

                    >
                    <TextView
                        android:autoLink="web"
                        android:layout_weight="3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/charity3"
                        android:textColor="@color/black"
                        android:gravity="right"
                        android:textSize="17dp"
                        android:id="@+id/link3"/>

                    <TextView
                        android:layout_weight="3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/charity3Phone"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:gravity="center"/>
                </LinearLayout>

                <ImageView
                    android:padding="20dp"
                    android:adjustViewBounds="true"
                    android:id="@+id/email_charity_3"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_mail_outline_black_24dp"
                    android:onClick="sendContact"

                    />


            </LinearLayout>
        </LinearLayout>






    </LinearLayout>
</ScrollView>
