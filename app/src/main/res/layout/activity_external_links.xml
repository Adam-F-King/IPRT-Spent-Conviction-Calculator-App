<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:orientation="vertical"
        android:background="@color/white"


        tools:context="ie.iskill.collaborationexample.eric.EricActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/iprt_white_logo"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            >

        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#000000" />
        <LinearLayout
            android:background="@color/cream"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingBottom="5dp"
            >



            <ImageView
                android:layout_width="150px"
                android:layout_height="150px"
                android:src="@drawable/iasio"
                android:onClick="oncharity1Click"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"/>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2"

       >
            <TextView
                android:autoLink="web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/charity1"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="20dp"
                android:id="@+id/link1"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/charity1Phone"
            android:textColor="@color/black"


            android:textSize="20dp"
            android:gravity="center"/>
        </LinearLayout>

            <Button
                android:id="@+id/email_charity_1"
                android:layout_weight="1"
                android:layout_width="150px"
                android:layout_height="150px"
                android:background="@drawable/mail"
                android:onClick="sendContact"

                />


        </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            >

            </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#000000" />


        <LinearLayout
            android:background="@color/cream"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingBottom="5dp"
                >



                <ImageView
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:src="@drawable/ucasedh"
                    android:onClick="oncharity2Click"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2"

                    >
                    <TextView
                        android:autoLink="web"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/charity2"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="20dp"/>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/charity2Phone"
                        android:textColor="@color/black"


                        android:textSize="20dp"
                        android:gravity="center"/>
                </LinearLayout>

                <Button

                    android:layout_weight="1"
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:background="@drawable/mail"
                    android:onClick="sendContact"
                    android:id="@+id/email_charity_2"
                    />


            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            >

        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#000000" />

        <LinearLayout
            android:background="@color/cream"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingBottom="5dp"
                >



                <ImageView
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:src="@drawable/carafterprison"
                    android:onClick="oncharity3Click"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2"

                    >
                    <TextView
                        android:autoLink="web"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/charity3"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="15dp"/>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/charity3Phone"
                        android:textColor="@color/black"


                        android:textSize="20dp"
                        android:gravity="center"/>
                </LinearLayout>

                <Button

                    android:layout_weight="1"
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:background="@drawable/mail"
                    android:onClick="sendContact"
                    android:id="@+id/email_charity_3"
                    />


            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#000000" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            >

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#000000" />

        <LinearLayout
            android:background="@color/cream"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingBottom="5dp"
                >



                <ImageView
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:src="@drawable/bridge"
                    android:onClick="oncharity4Click"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2"

                    >
                    <TextView
                        android:autoLink="web"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/charity4"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="20dp"/>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/charity4Phone"
                        android:textColor="@color/black"


                        android:textSize="20dp"
                        android:gravity="center"/>
                </LinearLayout>

                <Button

                    android:layout_weight="1"
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:background="@drawable/mail"
                    android:onClick="oncharity4mail"
                    android:id="@+id/email_charity_4"
                    />


            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            >

        </LinearLayout>



        <Button
            android:layout_marginTop="0dp"
            android:onClick="onMainReturn"

            android:text="Return to main"

            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:layout_marginBottom="0dp"
            android:background="@drawable/button_red_square"
            android:textColor="@color/white"
            />



    </LinearLayout>
</ScrollView>
