   and added padding to first text view-->
    <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="@color/white"
    >


<LinearLayout
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    tools:context="ie.iprt.spentconvictioncalculator.AboutActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/home_screen_main_logo"
        android:adjustViewBounds="true"
        android:paddingTop="15dp"
        android:paddingBottom="25dp"
        />
    <TextView
        android:gravity="center"
        android:textSize="30sp"
        android:id="@+id/instructions_header"
        android:text="@string/instructions_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="15dp"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#000000" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_form"
            android:layout_marginRight="5dp"
            android:onClick="FormActivity"
            />
        <TextView
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:textSize="13dp"
        android:textColor="@color/black"
        android:text="@string/form_instructions_page_button" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#000000" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_external_links"
        android:layout_marginRight="5dp"
        android:onClick="onExternalLinksActivity"
        />
        <TextView
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:text="@string/external_links_instructions_page_button"/>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#000000" />




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_about"
            android:layout_marginRight="5dp"
            android:onClick="onAboutClick"
            />
        <TextView
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="@color/black"
            android:text="@string/about_instructions_page_button"/>
    </LinearLayout>



    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#000000" />


</LinearLayout>
    </ScrollView>