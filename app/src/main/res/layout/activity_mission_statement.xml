<?xml version="1.0" encoding="utf-8"?>

    <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">





<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="@color/white"
    tools:context="ie.iprt.spentconvictioncalculator.MissionStatementActivity">

    <ImageView
        android:src="@drawable/iprt_white_logo_land"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="220sp" />




    <TextView
        android:text="@string/mission_statement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:onClick="FormActivity"
        android:background="@drawable/button_red_square"
        android:text="@string/calculator_link"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="70dp" />


</LinearLayout>
    </ScrollView>


