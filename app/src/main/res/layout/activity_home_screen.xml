<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:background="@color/white"
    tools:context="ie.iprt.spentconvictioncalculator.HomeScreen">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/iprt_white_logo"
        android:adjustViewBounds="true"
        android:paddingTop="15dp"
        android:paddingBottom="25dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_mission"
                android:adjustViewBounds="true"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/frame"
                android:layout_marginRight="6dp"
                android:adjustViewBounds="true" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:onClick="onMissionStatementClick"
                android:text="Mission Statement"
                android:gravity="bottom|center"
                android:background="@color/transparent"
                android:id="@+id/mission_statement"
                android:layout_marginBottom="10dp"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:src="@drawable/ic_form"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/frame"
                android:layout_marginLeft="6dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:onClick="onViewButtonClicked"
                android:id="@+id/form_button_main"
                android:text="Form"
                android:gravity="bottom|center"
                android:background="@color/transparent"
                android:layout_marginBottom="10dp"/>
        </FrameLayout>
    </LinearLayout>
    <!--Second Line-->
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         android:layout_marginTop="10dp"
         android:layout_marginBottom="10dp"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_external_links"
                android:adjustViewBounds="true"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/frame"
                android:layout_marginRight="6dp"
                android:adjustViewBounds="true" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="External Links"
                android:gravity="bottom|center"
                android:background="@color/transparent"
                android:id="@+id/external_links"
                android:layout_marginBottom="10dp"
                android:onClick="onExternalLinksActivity"
                />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_about"
                android:adjustViewBounds="true"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/frame"
                android:layout_marginLeft="6dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="About"
                android:gravity="bottom|center"
                android:background="@color/transparent"
                android:id="@+id/about_button"
                android:layout_marginBottom="10dp"
                android:onClick="onAboutClick"/>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>
